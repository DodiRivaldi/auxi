<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:background="@drawable/login"
    android:layout_height="match_parent"
    tools:context="project.arrik.com.auxi.ui.LoginActivity">

    <LinearLayout
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="410dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:paddingTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <Button
            android:padding="10dp"
            android:drawableLeft="@drawable/fb_white"
            android:textColor="@color/colorWhite"
            android:text="@string/join_fb"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:layout_height="wrap_content">
        <View
            android:layout_marginTop="10dp"
            android:layout_width="150dp"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>
        <TextView
            android:textSize="8sp"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  OR  "/>
        <View
            android:layout_marginTop="10dp"
            android:layout_width="150dp"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>
        </LinearLayout>

        <Button
            android:padding="10dp"
            android:layout_marginTop="0dp"
            android:textColor="@color/colorWhite"
            android:text="@string/join_google"
            android:background="@color/colorRed"
            android:gravity="center"
            android:drawableLeft="@drawable/google_white"
            android:drawablePadding="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>
